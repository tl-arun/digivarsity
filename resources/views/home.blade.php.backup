    ];

    // Testimonials for carousel
    const testimonials = [
        {
            name: "Rajesh Kumar",
            role: "Marketing Executive ‚Üí Marketing Manager",
            initial: "R",
            text: "This program completely transformed my career! The curriculum was practical and industry-relevant. Within 6 months of completion, I got promoted to a managerial role with a 40% salary hike.",
            color: "from-indigo-500 to-purple-600"
        },
        {
            name: "Priya Sharma",
            role: "Software Developer ‚Üí Data Scientist",
            initial: "P",
            text: "The faculty and course content were exceptional. I successfully transitioned from development to data science. The hands-on projects gave me real-world experience.",
            color: "from-green-500 to-teal-600"
        },
        {
            name: "Amit Patel",
            role: "Sales Manager ‚Üí Business Development Head",
            initial: "A",
            text: "Best decision of my career! The program helped me develop strategic thinking and leadership skills. I'm now heading the BD department at a Fortune 500 company.",
            color: "from-orange-500 to-red-600"
        }
    ];

    let currentQuoteIndex = 0;
    let currentTestimonialIndex = 0;

    // Hero Background Rotation
    @if($heroBackgrounds && $heroBackgrounds->count() > 1)
    let currentBackgroundIndex = 0;
    const heroBackgrounds = document.querySelectorAll('.hero-background');
    const totalBackgrounds = heroBackgrounds.length;

    function rotateHeroBackground() {
        // Fade out current background
        heroBackgrounds[currentBackgroundIndex].style.opacity = '0';

        // Move to next background
        currentBackgroundIndex = (currentBackgroundIndex + 1) % totalBackgrounds;

        // Fade in next background
        heroBackgrounds[currentBackgroundIndex].style.opacity = '1';
    }

    // Rotate backgrounds every 5 seconds
    if (totalBackgrounds > 1) {
        setInterval(rotateHeroBackground, 5000);
    }
    @endif

    // Scroll Animation Observer
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, observerOptions);

    // Counter Animation
    function animateCounter(element) {
        const target = parseInt(element.getAttribute('data-target'));
        const duration = 2000;
        const step = target / (duration / 16);
        let current = 0;

        const timer = setInterval(() => {
            current += step;
            if (current >= target) {
                element.textContent = target;
                clearInterval(timer);
            } else {
                element.textContent = Math.floor(current);
            }
        }, 16);
    }

    // Quote Carousel
    function rotateQuote() {
        currentQuoteIndex = (currentQuoteIndex + 1) % quotes.length;
        const quote = quotes[currentQuoteIndex];

        const carousel = document.getElementById('quote-carousel');
        carousel.style.opacity = '0';

        setTimeout(() => {
            carousel.innerHTML = `
                <div class="quote-slide">
                    <p class="text-3xl font-light text-gray-800 mb-6 italic">"${quote.text}"</p>
                    <p class="text-xl text-indigo-600 font-semibold">- ${quote.author}</p>
                </div>
            `;
            carousel.style.opacity = '1';
        }, 300);

        // Update dots
        document.querySelectorAll('.quote-dot').forEach((dot, index) => {
            dot.classList.toggle('bg-indigo-600', index === currentQuoteIndex);
            dot.classList.toggle('bg-gray-300', index !== currentQuoteIndex);
        });
    }

    // Testimonial Carousel
    function rotateTestimonial() {
        currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonials.length;
        const testimonial = testimonials[currentTestimonialIndex];

        const carousel = document.getElementById('testimonial-carousel');
        carousel.style.opacity = '0';

        setTimeout(() => {
            carousel.innerHTML = `
                <div class="testimonial-slide bg-gradient-to-br from-indigo-50 to-purple-50 rounded-3xl p-12 shadow-2xl">
                    <div class="flex items-center mb-8">
                        <div class="w-20 h-20 bg-gradient-to-br ${testimonial.color} rounded-full flex items-center justify-center text-white text-3xl font-bold mr-6 shadow-lg">
                            ${testimonial.initial}
                        </div>
                        <div>
                            <h4 class="text-2xl font-bold text-gray-800">${testimonial.name}</h4>
                            <p class="text-indigo-600 font-semibold">${testimonial.role}</p>
                        </div>
                    </div>
                    <p class="text-xl text-gray-700 italic leading-relaxed">"${testimonial.text}"</p>
                    <div class="flex mt-6">
                        <i class="fas fa-star text-yellow-400 text-xl"></i>
                        <i class="fas fa-star text-yellow-400 text-xl ml-1"></i>
                        <i class="fas fa-star text-yellow-400 text-xl ml-1"></i>
                        <i class="fas fa-star text-yellow-400 text-xl ml-1"></i>
                        <i class="fas fa-star text-yellow-400 text-xl ml-1"></i>
                    </div>
                </div>
            `;
            carousel.style.opacity = '1';
        }, 300);

        // Update dots
        document.querySelectorAll('.testimonial-dot').forEach((dot, index) => {
            dot.classList.toggle('bg-indigo-600', index === currentTestimonialIndex);
            dot.classList.toggle('bg-gray-300', index !== currentTestimonialIndex);
        });
    }

    // Load Scrolling Programs Showcase
    async function loadScrollingPrograms() {
        try {
