            // First row (scroll left)
            const row1 = document.getElementById('scroll-row-1');
            row1.innerHTML = duplicatedPrograms.map(program => `
                <div class="scroll-item">
                    <a href="/programs/${program.id}" class="block">
                        <div class="w-80 h-48 rounded-2xl overflow-hidden shadow-2xl relative group">
                            ${program.image_url ?
                                `<img src="${program.image_url}" alt="${program.name}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">` :
                                `<div class="w-full h-full bg-gradient-to-br from-indigo-400 to-purple-600 flex items-center justify-center">
                                    <i class="fas fa-graduation-cap text-white text-6xl opacity-50"></i>
