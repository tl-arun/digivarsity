    // Toggle Mobile Menu
    function toggleMobileMenu() {
        const menu = document.getElementById('mobile-menu');
        if (menu.style.display === 'none' || menu.style.display === '') {
            menu.style.display = 'block';
            menu.classList.add('active');
        } else {
            menu.style.display = 'none';
            menu.classList.remove('active');
        }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        // Observe all animate-on-scroll elements
        document.querySelectorAll('.animate-on-scroll').forEach(el => {
            observer.observe(el);
        });

        // Animate counters when visible
        const counterObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateCounter(entry.target);
                    counterObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });

        document.querySelectorAll('.counter').forEach(counter => {
            counterObserver.observe(counter);
        });

        // Load all carousels and featured programs
        loadScrollingPrograms();
        loadUniversitiesCarousel();
        loadFeaturedPrograms();

        // Start carousels
        setInterval(rotateQuote, 5000);
        setInterval(rotateTestimonial, 7000);

        // Quote dots click handlers
        document.querySelectorAll('.quote-dot').forEach(dot => {
            dot.addEventListener('click', function() {
                currentQuoteIndex = parseInt(this.getAttribute('data-index'));
                rotateQuote();
            });
        });

        // Testimonial dots click handlers
        document.querySelectorAll('.testimonial-dot').forEach(dot => {
            dot.addEventListener('click', function() {
                currentTestimonialIndex = parseInt(this.getAttribute('data-index'));
                rotateTestimonial();
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>
@endpush


